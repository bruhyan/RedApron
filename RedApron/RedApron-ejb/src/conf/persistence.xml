<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="RedApron-ejbPU" transaction-type="JTA">
    <jta-data-source>jdbc/RedApron</jta-data-source>
    <class>entity.Review</class>
    <class>entity.Enquiry</class>
    <class>entity.Transaction</class>
    <class>entity.Answer</class>
    <class>entity.Staff</class>
    <class>entity.Subscriber</class>
    <class>entity.SubscriptionPlan</class>
    <exclude-unlisted-classes>false</exclude-unlisted-classes>
    <properties>
      <property name="javax.persistence.schema-generation.database.action" value="create"/>
    </properties>
  </persistence-unit>
</persistence>
